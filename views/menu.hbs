<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        

    <title>{{title}}</title>
</head>

<body>

    {{#each results}}
    <div class="container">
        <div class="card" style="width: 18rem; margin: 25px;">
            <img src="{{this.image}}" class="card-img-top" alt="{{this.description}}">
            <div class="card-body">
                <h5 class="card-title">{{this.dishName}}</h5>
                <p class="card-text">{{this.description}}</p>
                <strong>â‚±{{this.price}}</strong>
                <a href="/admin/dish/{{this.id}}">/admin/dish/{{this.id}}</a>
            </div>
        </div>
    </div>
    {{/each}}

    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    
    

</body>

</html>